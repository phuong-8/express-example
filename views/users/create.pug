extends ../layout/base.pug
block content
   
    .container
        if errors
            each error in errors
                .alert.alert-danger= error
        h1.text-center Create a user
        form.form-group(action="/users/create", method="POST")
            .form-group
                label.label(for="name") Name
                input.form-control#name(type="text", name="name", value= values ? values.name : "")
            .form-group
                label.label(for="phone") Phone
                input.form-control#phone(type="text", name="phone", value= values ? values.phone : "")
            button.btn.btn-primary Create