extends ../layout/base.pug
block content
    .container
        if errors
            each error in errors
                .alert.alert-danger= error
        h1.text-center Create a user
        form(action="/users/create", method="POST",enctype="multipart/form-data")
            .form-group
                label(for="name") Name
                input.form-control#name(type="text", name
                ="name", value= values ? values.name : "")
            .form-group
                label(for="phone") Phone
                input.form-control#phone(type="text", name
                ="phone", value= values ? values.phone : "")
            .form-group
                label(for="avatar") Avatar
                input.form-control-file#avatar(type="file", name
                ="avatar")
            button.btn.btn-primary Create