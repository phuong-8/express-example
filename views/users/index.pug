extends ../layout/base.pug
block content
    .container
        h1.text-center Home
        form(action='/users/search', method='GET', class="d-flex")
            input.form-control(name='q', type='text')
            button.btn.btn-primary.ml-2 Search
        table(class="table")
            tr
                th Avatar
                th Name    
                th Phone  
                th
            each user in users
                tr
                    td 
                        img(src= user.avatar, width='36px')
                    td= user.name   
                    td= user.phone         
                    td 
                        a.btn.btn-light(href="/users/" + user.id) view